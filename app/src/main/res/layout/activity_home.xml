<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alex.alfa0.Home">

    <TextView
        android:id="@+id/TVBenvenuto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/roboto"
        android:text="Benvenuto,"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/TVTesto"
        android:layout_width="360dp"
        android:layout_height="60dp"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/roboto"
        android:text="Al momento non ci sono schede, premi il pulsante per aggiornare la situazione"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/TVBenvenuto"
        app:layout_constraintHorizontal_bias="0.486"
        app:layout_constraintStart_toStartOf="@+id/TVBenvenuto"
        app:layout_constraintTop_toBottomOf="@+id/TVBenvenuto" />

    <Button
        android:id="@+id/BTAggiorna"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="92dp"
        android:text="Aggiorna"
        android:fontFamily="@font/roboto"
        app:layout_constraintEnd_toEndOf="@+id/TVTesto"
        app:layout_constraintHorizontal_bias="0.531"
        app:layout_constraintStart_toStartOf="@+id/TVTesto"
        app:layout_constraintTop_toBottomOf="@+id/TVTesto" />

    <TextView
        android:id="@+id/TVNome"
        android:layout_width="106dp"
        android:layout_height="21dp"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/TVBenvenuto"
        app:layout_constraintTop_toTopOf="@+id/TVBenvenuto" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="129dp"
        android:layout_height="141dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ambu_round" />
</android.support.constraint.ConstraintLayout>
